@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}
<partial name="_Notification" />
<div class="container p-3">

    <div class="row p-4">
        <div class=" col-6">
            <h2 >
                لیست دسته ها
            </h2>
        </div>
        <div class=" col-6 text-end"  >
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
                <i class="bi bi-plus-circle"></i> ایجاد دسته جدید
            </a>
        </div>
    </div>
    <br/>

<table class="table table-bordered" style="width : 100%">
    <thead>
        <tr>
            <th>
                نام دسته
            </th>
            <th>
                ترتیب نمایش
            </th>
            <th>
                
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.DisplayOrder
                </td>
                <td>
                        <div class="w-100 btn-group" role="group">
                        <a asp-controller="Category" asp-action="edit" asp-route-id="@obj.Id">
                                ویرایش<i class="bi bi-pencil-square" > </i>
                        </a>
                            <a asp-controller="Category" asp-action="delete" asp-route-id="@obj.Id">
                                حذف<i class="bi bi-trash3"></i>
                            </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>